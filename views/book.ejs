<script src="/js/turn"></script>
<script src="/js/book"></script>
<script src="/js/sIndex"></script>
<script>
  let firstRead = true;
  function getMultiValueCookie(name) {
  const cookieArray = document.cookie.split('; ');
  for (let i = 0; i < cookieArray.length; i++) {
      const cookie = cookieArray[i].split('=');
      if (cookie[0] === name) {
          return cookie[1].split(',');
      }
  }
  return null;
  }
  const user = getMultiValueCookie("username");
  if(user) {
      const id = user[0];
      const query = {
          operation: 'read-get',
          id: id,
          placeholder: '<%=query[0].placeholder%>'
      };
      fetch('/user', {
          method: 'POST',
          headers: {
              'Content-Type': 'application/json'
          },
          body: JSON.stringify(query)
      }).then(response => response.json())
          .then(page => {
              console.log(page);
              if(page.page.length != 0) {
                  $("#flipbook").turn("page", page.page[0].page);
                  if(page.page === <%=query[0].pages - 1%>) {
                    firstRead = false;
                  }
              }
      }).catch(error => console.error(error));
      let oldPage = $("#flipbook").turn("page");
      setInterval(() => {
          let actualPage = $("#flipbook").turn("page");
          if(actualPage == <%=query[0].pages - 1%> && !firstRead) {
              const query = {
                  operation: "read-finish",
                  medianInDays: '<%=query[0].medianindays%>',
                  id: id,
                  placeholder: '<%=placeholder%>',
                  finishDate: new Date()
              };
              fetch('/user', {
                  method: 'POST',
                  headers: {
                      'Content-Type': 'application/json'
                  },
                  body: JSON.stringify(query)
              }).then(response => response.json())
                  .then(data => {
                      console.log("Finishing ...");
                  console.log(data);
                  if(data.result = "sucessfuly") {
                      const pnts = document.querySelectorAll("span");
                      pnts.forEach(element => {
                          element.innerHTML = data.pnts;
                      });
                  }
                  document.getElementById("bookComplete").style.display = 'block';
                  setTimeout(() => window.location.assign('/'), 1000);
              }).catch(error => console.error(error));
          }
          if(actualPage != oldPage) {
              const data = {
                  operation: "read-update",
                  id: id,
                  pageNumber: actualPage,
                  placeholder: '<%=placeholder%>',
                  date: new Date()
              };
              fetch('/user', {
                  method: 'POST',
                  headers: {
                      'Content-Type': 'application/json'
                  },
                  body: JSON.stringify(data)
              }).catch(error => console.error(error));
              oldPage = actualPage;
          }
      }, 3000);
  }
</script>