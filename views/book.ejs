  <div id="flipbook">
    <% for(let i = 1; i < query[0].pages; i++) { %>
      <div>
        <img class="page" src="https://ebjn.serveo.net/PAGES/<%= placeholder%>/<%= placeholder + i%>.png">
      </div>
    <% }%>
  </div>
